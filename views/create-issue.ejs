<link rel="stylesheet" href="/css/project-form.css">
<br>
<h2 style="margin-left: 450px;"> Create Issue/Bug for <u style="color: red;"><%= project.name %> </u></h2> 
  <div class="form-container">
    
    <form action="/project/issue-form" method="POST">
         
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" required>
      </div>
      <div class="form-group">
        <label for="dropdown">Do you want to add labels:</label>
        <select id="dropdown" name="dropdown" onchange="toggleCheckboxes()">
          <option value="no">No</option>
          <option value="yes">Yes</option>
        </select>
      </div>
      <div id="checkbox-group" class="checkbox-group">
        <label>Labels:</label>
        <label><input type="checkbox" name="labels" value="label1"> Label 1</label>
        <label><input type="checkbox" name="labels" value="label2"> Lable 2</label>
        <label><input type="checkbox" name="labels" value="label3"> Label 3</label>
      </div>
      <div class="form-group">
        <button type="submit">Submit</button>
        <a class="form-group" href="/project/details" style="margin-left: 230px; background-color: rgb(216, 114, 114); padding: 10px 20px; color: white; border-radius: 5px;">Back</a>
      </div>
    </form>

  </div>


